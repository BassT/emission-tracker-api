{
  "openapi": "3.0.0",
  "info": {
    "title": "Emission Tracker API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    },
    {
      "url": "https://emission-tracker-api.azurewebsites.net/api"
    }
  ],
  "security": [{ "AzureADBearerStrategy": [] }],
  "paths": {
    "/transport-activity": {
      "get": {
        "operationId": "listTransportActivities",
        "parameters": [
          {
            "in": "query",
            "name": "title",
            "schema": {
              "type": "string",
              "enum": ["true"]
            }
          },
          {
            "in": "query",
            "name": "totalEmissions",
            "schema": {
              "type": "string",
              "enum": ["true"]
            }
          },
          {
            "in": "query",
            "name": "date",
            "schema": {
              "type": "string",
              "enum": ["true"]
            }
          },
          {
            "in": "query",
            "name": "dateAfter",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string",
                        "nullable": true
                      },
                      "totalEmissions": {
                        "type": "number",
                        "nullable": true
                      },
                      "date": {
                        "type": "string",
                        "nullable": true,
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createTransportActivity",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "date": { "type": "string", "format": "date-time" },
                  "distance": { "type": "number" },
                  "specificEmissions": { "type": "number" },
                  "fuelType": { "type": "string", "enum": ["Diesel", "Gasoline"] },
                  "specificFuelConsumption": { "type": "number" },
                  "totalFuelConsumption": { "type": "number" },
                  "calcMode": { "type": "string", "enum": ["SpecificEmissions", "SpecificFuel", "TotalFuel"] },
                  "persons": { "type": "number" },
                  "totalEmissions": { "type": "number" }
                },
                "required": ["title", "date", "distance", "specificEmissions", "totalEmissions"],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created transport activity",
            "headers": {
              "location": {
                "schema": { "type": "string" },
                "description": "The URL to get transport activity details."
              }
            },
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string" } } }
              }
            }
          },
          "401": {
            "description": "Not authenticated",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "error": { "type": "string" } } }
              }
            }
          },
          "403": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "errors": { "type": "array", "items": { "type": "object" } } }
                }
              }
            }
          }
        }
      }
    },
    "/transport-activity/{id}": {
      "get": {
        "operationId": "getTransportActivityDetails",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" },
                    "date": { "type": "string", "format": "date-time" },
                    "distance": { "type": "number" },
                    "specificEmissions": { "type": "number" },
                    "totalEmissions": { "type": "number" },
                    "fuelType": { "type": "string", "enum": ["Diesel", "Gasoline"] },
                    "specificFuelConsumption": { "type": "number" },
                    "totalFuelConsumption": { "type": "number" },
                    "calcMode": { "type": "string", "enum": ["SpecificEmissions", "SpecificFuel", "TotalFuel"] },
                    "persons": { "type": "number" },
                    "createdBy": { "type": "string" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time", "nullable": true }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "operationId": "deleteTransportActivity",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted successfully."
          }
        }
      },
      "put": {
        "operationId": "updateTransportActivity",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "date": { "type": "string", "format": "date-time" },
                  "distance": { "type": "number" },
                  "specificEmissions": { "type": "number" },
                  "fuelType": { "type": "string", "enum": ["Diesel", "Gasoline"] },
                  "specificFuelConsumption": { "type": "number" },
                  "totalFuelConsumption": { "type": "number" },
                  "calcMode": { "type": "string", "enum": ["SpecificEmissions", "SpecificFuel", "TotalFuel"] },
                  "persons": { "type": "number" },
                  "totalEmissions": { "type": "number" }
                },
                "required": ["title", "date"],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successful.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" },
                    "date": { "type": "string", "format": "date-time" },
                    "distance": { "type": "number" },
                    "specificEmissions": { "type": "number" },
                    "totalEmissions": { "type": "number" },
                    "fuelType": { "type": "string", "enum": ["Diesel", "Gasoline"] },
                    "specificFuelConsumption": { "type": "number" },
                    "totalFuelConsumption": { "type": "number" },
                    "calcMode": { "type": "string", "enum": ["SpecificEmissions", "SpecificFuel", "TotalFuel"] },
                    "persons": { "type": "number" },
                    "createdBy": { "type": "string" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time", "nullable": true }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "AzureADBearerStrategy": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
