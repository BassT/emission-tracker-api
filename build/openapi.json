{
    "openapi": "3.0.0",
    "info": {
        "title": "Emission Tracker API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api"
        }
    ],
    "security": [{ "NaiveAuth": [] }],
    "paths": {
        "/transport-activity": {
            "get": {
                "operationId": "listTransportActivities",
                "parameters": [
                    {
                        "in": "query",
                        "name": "title",
                        "schema": {
                            "type": "string",
                            "enum": ["true"]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "title": {
                                                "type": "string",
                                                "nullable": true
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "operationId": "createTransportActivity",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": { "type": "string" },
                                    "date": { "type": "string", "format": "date-time" },
                                    "distance": { "type": "number" },
                                    "specificEmissions": { "type": "number" },
                                    "totalEmissions": { "type": "number" }
                                },
                                "required": ["title", "date", "distance", "specificEmissions", "totalEmissions"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created transport activity",
                        "content": {
                            "text/plain": {
                                "schema": { "type": "string" }
                            }
                        }
                    }
                }
            }
        },
        "/transport-activity/{id}": {
            "get": {
                "operationId": "getTransportActivityDetails",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "date": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "distance": {
                                            "type": "number"
                                        },
                                        "specificEmissions": {
                                            "type": "number"
                                        },
                                        "totalEmissions": {
                                            "type": "number"
                                        },
                                        "createdBy": {
                                            "type": "string"
                                        },
                                        "createdAt": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updatedAt": {
                                            "type": "string",
                                            "format": "date-time",
                                            "nullable": true
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "NaiveAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "X-Naive-Auth"
            }
        }
    }
}
